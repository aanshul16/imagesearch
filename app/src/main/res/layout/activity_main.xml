<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="afterDescendants"
    tools:context="imageserach.fieldwire.amko0l.com.imagesearch.activities.MainActivity">

    <!-- Empty text view -->
    <TextView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin"
        android:gravity="center|top"
        android:text="@string/no_images"
        android:textAppearance="?android:textAppearanceMedium" />


    <TextView
        android:id="@+id/seachhistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_margin"
        android:padding="@dimen/common_padding"
        android:text="@string/search_history"
        android:textAppearance="?android:textAppearanceSmall" />

    <ListView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seachhistory"
        android:layout_margin="@dimen/common_margin"
        android:padding="@dimen/common_padding"
        android:descendantFocusability="afterDescendants"/>


    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/common_margin"
        android:horizontalSpacing="@dimen/grid_spacing"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/grid_spacing" />

    <ProgressBar
        android:id="@+id/loading_indicator_main_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>


